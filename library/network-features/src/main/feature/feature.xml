<features name="library-network-features-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
          http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">
    <feature name="httpcore" description="Apache HttpCore OSGi Bundle" version="${apache.httpcomonents.version}" resolver="(obr)">
        <details>HttpComponents Core (OSGi bundle): Both blocking I/O and non-blocking I/O HttpComponents Core </details>
        <bundle>mvn:org.apache.httpcomponents/httpcore-osgi/${apache.httpcomonents.version}</bundle>
    </feature>
    <feature name="httpclient" description="Apache HttpClient OSGi Bundle" version="${apache.httpcomonents.version}" resolver="(obr)">
        <details>HttpComponents Client (OSGi bundle): httpcore,httpclient,httpmime,httpclient-cache,fluent-hc</details>
        <feature>commons-logging</feature>
        <bundle>mvn:org.apache.httpcomponents/httpclient-osgi/${apache.httpcomonents.version}</bundle>
    </feature>
    <feature name="httpasyncclient" description="HttpAsyncClient OSGi Bundle" version="${apache.httpasyncclient.version}" resolver="(obr)">
        <details>HttpComponents AsyncClient (OSGi bundle)</details>
        <feature>commons-logging</feature>
        <feature>httpclient</feature>
        <bundle>mvn:org.apache.httpcomponents/httpasyncclient-osgi/${apache.httpasyncclient.version}</bundle>
    </feature>


</features>